{
  "npmClient": "yarn",
  "command": {
    "init": {
      "exact": true
    },
    "version": {
      "conventionalCommits": true,
      "includeMergedTags": true,
      "message": "chore(release): :rocket: bump versions"
    }
  },
  "ignoreChanges": ["**/CHANGELOG.md", "**/*.md"],
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true
}
