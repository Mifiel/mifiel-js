{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2015",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib", "utils/version.js"],
  "exclude": ["node_modules"]
}
