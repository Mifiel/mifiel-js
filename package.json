{
  "name": "mifiel",
  "description": "Monorepo that contains a set of Mifiel libraries.",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "16.*"
  },
  "repository": "git@github.com:Mifiel/mifiel-js.git",
  "bugs": {
    "url": "https://github.com/Mifiel/mifiel-js/issues"
  },
  "homepage": "https://github.com/Mifiel/mifiel-js#readme",
  "author": "Edgar Zavala <ezavile@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --scope=@mifiel/{api-client,api-client-auth} && yarn build:widget",
    "build:widget": "lerna run build --scope=@mifiel/widget-stencil && lerna run build --scope=@mifiel/{widget-react,widget-vue,widget-angular}",
    "husky": "husky",
    "lint": "lerna run lint",
    "postpublish": "pinst --enable",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "release:publish": "lerna publish",
    "release:version": "lerna version",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@commitlint/config-lerna-scopes": "13.1.0",
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "esbuild": "0.12.19",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-prettier": "3.4.0",
    "format-package": "6.1.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  }
}
